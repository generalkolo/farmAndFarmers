<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="statsViewModel"
            type="com.example.cleanWithCoRoutine.statistics.presentation.StatisticActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.fragments.ClickedFarmDetailsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/center_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.3" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.1" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/seventy_percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/right_guideline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.9" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/profile_image"
                    viewElevation="20"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="@id/right_guideline"
                    app:layout_constraintStart_toStartOf="@id/left_guideline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeholderImage="@drawable/ic_image_background"
                    app:roundAsCircle="true"
                    tools:elevation="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstName_textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="8dp"
                    android:hint="First Name"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/lastName_textInputLayout"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstName_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@{statsViewModel.clickedFarmDetails.firstName}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lastName_textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Last Name"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/firstName_textInputLayout"
                    app:layout_constraintTop_toTopOf="@+id/firstName_textInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/lastName_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@{statsViewModel.clickedFarmDetails.lastName}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_number_textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Phone Number"
                    app:counterEnabled="true"
                    app:counterMaxLength="11"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/firstName_textInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_number_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="@{statsViewModel.clickedFarmDetails.phoneNumber}" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Date of Birth (DOB)"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_textInputLayout" />

                <include
                    android:id="@+id/date_of_birth_picker"
                    layout="@layout/date_picker_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:label="@{@string/from_text}"
                    app:layout_constraintEnd_toStartOf="@+id/seventy_percent"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/date_of_birth" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/age_place_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age_text"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/date_of_birth"
                    app:layout_constraintEnd_toEndOf="@+id/farmers_age"
                    app:layout_constraintStart_toStartOf="@+id/farmers_age"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_textInputLayout"
                    app:layout_constraintTop_toTopOf="@+id/date_of_birth" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/farmers_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ic_input_background"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@{statsViewModel.farmersAge}"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/date_of_birth_picker"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/seventy_percent"
                    app:layout_constraintTop_toTopOf="@+id/date_of_birth_picker"
                    tools:text="2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/state_of_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="State of origin"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/date_of_birth_picker" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/state_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/state_of_origin" />

                <TextView
                    android:id="@+id/farm_details_text"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Farm Details"
                    app:layout_constraintEnd_toStartOf="@id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/state_spinner" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/farm_name_textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:hint="Farm Name"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/farm_details_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/farm_name_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@{statsViewModel.clickedFarmDetails.farmName}" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/where_state_is_located"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="State where farm is located"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/farm_name_textInputLayout" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/farm_state_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/where_state_is_located" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/farm_address_textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Farm Address"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/farm_state_spinner">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/farm_address_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@{statsViewModel.clickedFarmDetails.farmAddress}" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/farm_coordinates_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Farm Coordinates"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/farm_address_textInputLayout" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/farm_latitude"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:hint="Latitude"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/farm_longitude"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/farm_coordinates_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/farm_latitude_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="@{statsViewModel.clickedFarmDetails.farmLatitude}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/farm_longitude"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:hint="Longitude"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/farm_latitude"
                    app:layout_constraintTop_toTopOf="@+id/farm_latitude">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/farm_longitude_textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="@{statsViewModel.clickedFarmDetails.farmLongitude}" />

                </com.google.android.material.textfield.TextInputLayout>

                <fragment
                    android:id="@+id/farms_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/map_bottom_guideline"
                    app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                    app:layout_constraintStart_toEndOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/farm_latitude" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>